        <table class="tokugi-table">
          <% for (let i = 0; i < comments.length; i++) { let comment =
          comments[i]; let isNewRow = i % n === 0; let isEndOfRow = (i + 1) % n
          === 0 || i === comments.length - 1; %> <% if (isNewRow) { %>
